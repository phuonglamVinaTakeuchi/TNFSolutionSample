<Window x:Class="TNFReadBF1Window.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TNFReadBF1Window"
        mc:Ignorable="d"
        Title="MainWindow" Height="auto" Width="300">
    <StackPanel Height="auto">
        <TextBlock x:Name="StatusTextBox" Height="Auto" Margin="10" FontSize="24" Text="Please Open BF1 File" Foreground="Red"/>
        <Button Content="Open BF1 File" Click="Button_Click" Margin="10 0 10 10"/>
    </StackPanel>
</Window>
